<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ly.springbootshiro.dao.SysUserMapper">
  <resultMap id="BaseResultMap" type="com.ly.springbootshiro.pojo.SysUser">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="password" jdbcType="VARCHAR" property="password" />
    <result column="flag" jdbcType="SMALLINT" property="flag" />
    <result column="createtime" jdbcType="DATE" property="createtime" />
  </resultMap>
  <sql id="Base_Column_List">
    id, name, password, flag, createtime
  </sql>
  <select id="selectById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from sys_user
    where id = #{id,jdbcType=INTEGER}
  </select>
  <select id="selectByName" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from sys_user
    where name = #{name} and flag=1
  </select>
  <insert id="insert" parameterType="com.ly.springbootshiro.pojo.SysUser">
    insert into sys_user (id, name, password,
      flag, createtime)
    values (#{id,jdbcType=INTEGER}, #{name,jdbcType=VARCHAR}, #{password,jdbcType=VARCHAR},
      #{flag,jdbcType=SMALLINT}, #{createtime,jdbcType=DATE})
  </insert>
  <update id="updateByIdSelective" parameterType="com.ly.springbootshiro.pojo.SysUser">
    update sys_user
    <set>
      <if test="name != null">
        name = #{name,jdbcType=VARCHAR},
      </if>
      <if test="password != null">
        password = #{password,jdbcType=VARCHAR},
      </if>
      <if test="flag != null">
        flag = #{flag,jdbcType=SMALLINT},
      </if>
      <if test="createtime != null">
        createtime = #{createtime,jdbcType=DATE},
      </if>
    </set>
    where id = #{id,jdbcType=INTEGER}
  </update>
  <update id="updateByIdFlag" parameterType="com.ly.springbootshiro.pojo.SysUser">
    update sys_user
    set flag = #{flag,jdbcType=SMALLINT},
    where id = #{id,jdbcType=INTEGER}
  </update>
  <update id="updateByIdPassword" parameterType="com.ly.springbootshiro.pojo.SysUser">
        update sys_user set password = #{password} where id = #{id,jdbcType=INTEGER}
  </update>
</mapper>